<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
     <global>
      <constant>
        <constant-name>phone</constant-name>
        <constant-value>^\(?(\d{3})\)?[-| ]?(\d{3})[-| ]?(\d{4})$</constant-value>
      </constant>
      <constant>
        <constant-name>zip</constant-name>
        <constant-value>^\d{5}\d*$</constant-value>
      </constant>
      <constant>
        <constant-name>currency</constant-name>
        <constant-value>^\d{1,3}(,?\d{1,3})*\.?(\d{1,2})?$</constant-value>
      </constant> 
   </global>
   <formset>
        <form name="fileUpload">
            <field property="name" depends="required">
                <arg0 key="uploadForm.name"/>
            </field>
            <!-- Client-side Javascript won't catch this in IE, but server-side will -->
            <field property="file" depends="required">
                <arg0 key="uploadForm.file"/>
            </field>
        </form>
        
        
        <!--DecodeValue-START-->
        <form name="decodeValue">
            <field property="createdOn" depends="required">
                <arg0 key="decodeValue.createdOn"/>
            </field>
            <field property="updatedOn" depends="required">
                <arg0 key="decodeValue.updatedOn"/>
            </field>
            <field property="displayOrder" depends="required">
                <arg0 key="decodeValue.displayOrder"/>
            </field>
            <field property="enabled" depends="required">
                <arg0 key="decodeValue.enabled"/>
            </field>
            <field property="shortCode" depends="required">
                <arg0 key="decodeValue.shortCode"/>
            </field>
            <field property="value" depends="required">
                <arg0 key="decodeValue.value"/>
            </field>
        </form>
        <!--DecodeValue-END-->
        <!--DecodeGroup-START-->
        <form name="decodeGroup">
            <field property="code" depends="required">
                <arg0 key="decodeGroup.code"/>
            </field>
            <field property="name" depends="required">
                <arg0 key="decodeGroup.name"/>
            </field>
        </form>
        <!--DecodeGroup-END-->
        <!--Course-START-->
        <form name="course">
            <field property="createdOn" depends="required">
                <arg0 key="course.createdOn"/>
            </field>
            <field property="updatedOn" depends="required">
                <arg0 key="course.updatedOn"/>
            </field>
            <field property="branch" depends="required">
                <arg0 key="course.branch"/>
            </field>
            <field property="code" depends="required">
                <arg0 key="course.code"/>
            </field>
            <field property="duration" depends="required">
                <arg0 key="course.duration"/>
            </field>
        </form>
        <!--Course-END-->
        <!--Address-START-->
        <form name="address">
            <field property="createdOn" depends="required">
                <arg0 key="address.createdOn"/>
            </field>
            <field property="updatedOn" depends="required">
                <arg0 key="address.updatedOn"/>
            </field>
            <field property="addressType" depends="required">
                <arg0 key="address.addressType"/>
            </field>
            <field property="displayOrder" depends="required">
                <arg0 key="address.displayOrder"/>
            </field>
            <field property="enabled" depends="required">
                <arg0 key="address.enabled"/>
            </field>
            <field property="ownerEntityId" depends="required">
                <arg0 key="address.ownerEntityId"/>
            </field>
            <field property="ownerEntityTypeId" depends="required">
                <arg0 key="address.ownerEntityTypeId"/>
            </field>
            <field property="primaryAddress" depends="required">
                <arg0 key="address.primaryAddress"/>
            </field>
            <field property="uniqueCode" depends="required">
                <arg0 key="address.uniqueCode"/>
            </field>
        </form>
        <!--Address-END-->
        <!--Phone-START-->
        <form name="phone">
            <field property="createdOn" depends="required">
                <arg0 key="phone.createdOn"/>
            </field>
            <field property="updatedOn" depends="required">
                <arg0 key="phone.updatedOn"/>
            </field>
            <field property="dataType" depends="required">
                <arg0 key="phone.dataType"/>
            </field>
            <field property="dataValue" depends="required">
                <arg0 key="phone.dataValue"/>
            </field>
            <field property="displayOrder" depends="required">
                <arg0 key="phone.displayOrder"/>
            </field>
            <field property="enabled" depends="required">
                <arg0 key="phone.enabled"/>
            </field>
            <field property="entitySubType" depends="required">
                <arg0 key="phone.entitySubType"/>
            </field>
            <field property="ownerEntityId" depends="required">
                <arg0 key="phone.ownerEntityId"/>
            </field>
            <field property="ownerEntityTypeId" depends="required">
                <arg0 key="phone.ownerEntityTypeId"/>
            </field>
        </form>
        <!--Phone-END-->
        <!--PersonName-START-->
        <form name="personName">
            <field property="createdOn" depends="required">
                <arg0 key="personName.createdOn"/>
            </field>
            <field property="updatedOn" depends="required">
                <arg0 key="personName.updatedOn"/>
            </field>
            <field property="firstName" depends="required">
                <arg0 key="personName.firstName"/>
            </field>
            <field property="lastName" depends="required">
                <arg0 key="personName.lastName"/>
            </field>
            <field property="ownerEntityId" depends="required">
                <arg0 key="personName.ownerEntityId"/>
            </field>
            <field property="ownerEntityType" depends="required">
                <arg0 key="personName.ownerEntityType"/>
            </field>
            <field property="personType" depends="required">
                <arg0 key="personName.personType"/>
            </field>
        </form>
        <!--PersonName-END-->
        <!--Billing-START-->
        <form name="billing">
            <field property="createdOn" depends="required">
                <arg0 key="billing.createdOn"/>
            </field>
            <field property="updatedOn" depends="required">
                <arg0 key="billing.updatedOn"/>
            </field>
            <field property="accountNumber" depends="required">
                <arg0 key="billing.accountNumber"/>
            </field>
            <field property="admissionNumber" depends="required">
                <arg0 key="billing.admissionNumber"/>
            </field>
            <field property="bankId" depends="required">
                <arg0 key="billing.bankId"/>
            </field>
            <field property="ddDate" depends="required">
                <arg0 key="billing.ddDate"/>
            </field>
            <field property="ddChallanNumber" depends="required">
                <arg0 key="billing.ddChallanNumber"/>
            </field>
            <field property="entityType" depends="required">
                <arg0 key="billing.entityType"/>
            </field>
        </form>
        <!--Billing-END-->
    </formset>

  <formset>
  <!--
    Define form validation config in validation-forms.xml
  -->

      <form name="address">
              <field property="city"
                     depends="required">

                  <arg0 key="address.city"/>
              </field>
              <field property="country"
                     depends="required">

                  <arg0 key="address.country"/>
              </field>
              <field property="postalCode"
                     depends="required,mask">
                  <msg
                    name="mask"
                    key="errors.zip"/>

                  <arg0 key="address.postalCode"/>
                  <var>
                    <var-name>mask</var-name>
                    <var-value>${zip}</var-value>
                  </var>
              </field>
              <field property="province"
                     depends="required">

                  <arg0 key="address.province"/>
              </field>
      </form>
      <form name="user">
              <field property="username"
                     depends="required">

                  <arg0 key="user.username"/>
              </field>
              <field property="password"
                     depends="required,twofields">
                  <msg
                    name="twofields"
                    key="errors.twofields"/>

                  <arg0 key="user.password"/>
                  <arg1
                    key="user.confirmPassword"
                  />
                  <var>
                    <var-name>secondProperty</var-name>
                    <var-value>confirmPassword</var-value>
                  </var>
              </field>
              <field property="confirmPassword"
                     depends="required">

                  <arg0 key="user.confirmPassword"/>
              </field>
              <field property="firstName"
                     depends="required">

                  <arg0 key="user.firstName"/>
              </field>
              <field property="lastName"
                     depends="required">

                  <arg0 key="user.lastName"/>
              </field>
              <field property="address.city"
                     depends="required">

                  <arg0 key="user.address.city"/>
              </field>
              <field property="address.country"
                     depends="required">

                  <arg0 key="user.address.country"/>
              </field>
              <field property="address.postalCode"
                     depends="required,mask">
                  <msg
                    name="mask"
                    key="errors.zip"/>

                  <arg0 key="user.address.postalCode"/>
                  <var>
                    <var-name>mask</var-name>
                    <var-value>${zip}</var-value>
                  </var>
              </field>
              <field property="address.province"
                     depends="required">

                  <arg0 key="user.address.province"/>
              </field>
              <field property="email"
                     depends="required,email">

                  <arg0 key="user.email"/>
              </field>
              <field property="phoneNumber"
                     depends="mask">
                  <msg
                    name="mask"
                    key="errors.phone"/>

                  <arg0 key="user.phoneNumber"/>
                  <var>
                    <var-name>mask</var-name>
                    <var-value>${phone}</var-value>
                  </var>
              </field>
              <field property="passwordHint"
                     depends="required">

                  <arg0 key="user.passwordHint"/>
              </field>
      </form>
  </formset>
</form-validation>
