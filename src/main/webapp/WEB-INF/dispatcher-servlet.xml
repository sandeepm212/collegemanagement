<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="true">

    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="org.springframework.dao.DataAccessException">        
                    dataAccessFailure
                </prop>
            </props>
        </property>
    </bean>

    <bean id="filenameController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>

    <bean id="fileUploadController" class="com.management.college.webapp.controller.FileUploadController">
        <property name="validator" ref="beanValidator"/>
        <property name="cancelView" value="redirect:mainMenu.html"/>
        <property name="formView" value="uploadForm"/>
        <property name="successView" value="uploadDisplay"/>
    </bean>

    <bean id="passwordHintController" class="com.management.college.webapp.controller.PasswordHintController">
        <property name="userManager" ref="userManager"/>
        <property name="messageSource" ref="messageSource"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
    </bean>

    <bean id="reloadController" class="com.management.college.webapp.controller.ReloadController"/>

    <bean id="signupController" class="com.management.college.webapp.controller.SignupController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="signup"/>
        <property name="successView" value="redirect:mainMenu.html"/>
        <property name="userManager" ref="userManager"/>
        <property name="roleManager" ref="roleManager"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
        <property name="templateName" value="accountCreated.vm"/>
    </bean>

    <bean id="userController" class="com.management.college.webapp.controller.UserController">
        <property name="userManager" ref="userManager"/>
    </bean>

    <bean id="userFormController" class="com.management.college.webapp.controller.UserFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="userForm"/>
        <property name="successView" value="redirect:users.html"/>
        <property name="cancelView" value="redirect:mainMenu.html"/>
        <property name="userManager" ref="userManager"/>
        <property name="roleManager" ref="roleManager"/>
        <property name="mailEngine" ref="mailEngine"/>
        <property name="message" ref="mailMessage"/>
        <property name="templateName" value="accountCreated.vm"/>
    </bean>

    <!--Student-START-->
    <bean id="studentController" class="com.management.college.webapp.controller.StudentController">
        <property name="studentManager" ref="studentManager"/>
        <property name="successView" value="/student/students"/>
    </bean>

    <bean id="studentFormController" class="com.management.college.webapp.controller.StudentFormController">
        <property name="formView" value="/student/studentform"/>
        <property name="successView" value="redirect:students.html"/>
        <property name="studentManager" ref="studentManager"/>
        <property name="courseManager" ref="courseManager"/>
        <property name="commandClass" value="com.management.college.model.view.StudentView" />
        <property name="commandName" value="studentView" />
        <property name="validateOnBinding" value="false" />
        <property name="personNameManager" ref="personNameManager"/>
    </bean>
    <!--Student-END-->    

    <!--DecodeValue-START-->
    <bean id="decodeValueController" class="com.management.college.webapp.controller.DecodeValueController">
        <property name="decodeValueManager" ref="decodeValueManager"/>
    </bean>

    <bean id="decodeValueFormController" class="com.management.college.webapp.controller.DecodeValueFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="successView" value="redirect:decodeValues.html"/>
        <property name="decodeValueManager" ref="decodeValueManager"/>
    </bean>
    <!--DecodeValue-END-->

    <!--DecodeGroup-START-->
    <bean id="decodeGroupController" class="com.management.college.webapp.controller.DecodeGroupController">
        <property name="decodeGroupManager" ref="decodeGroupManager"/>
        <property name="successView" value="/admin/decodeGroups"/>
    </bean>

    <bean id="decodeGroupFormController" class="com.management.college.webapp.controller.DecodeGroupFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="/admin/decodeGroupform"/>
        <property name="successView" value="redirect:decodeGroups.html"/>
        <property name="decodeGroupManager" ref="decodeGroupManager"/>
    </bean>
    <!--DecodeGroup-END-->

    <!--Course-START-->
    <bean id="courseController" class="com.management.college.webapp.controller.CourseController">
        <property name="courseManager" ref="courseManager"/>
        <property name="successView" value="/admin/courses"/>
    </bean>

    <bean id="courseFormController" class="com.management.college.webapp.controller.CourseFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="formView" value="/admin/courseform"/>
        <property name="successView" value="redirect:courses.html"/>
        <property name="courseManager" ref="courseManager"/>
    </bean>
    <!--Course-END-->

    <!--Address-START-->
    <bean id="addressController" class="com.management.college.webapp.controller.AddressController">
        <property name="addressManager" ref="addressManager"/>
    </bean>

    <bean id="addressFormController" class="com.management.college.webapp.controller.AddressFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="successView" value="redirect:addresses.html"/>
        <property name="addressManager" ref="addressManager"/>
    </bean>
    <!--Address-END-->

    <!--Phone-START-->
    <bean id="phoneController" class="com.management.college.webapp.controller.PhoneController">
        <property name="phoneManager" ref="phoneManager"/>
    </bean>

    <bean id="phoneFormController" class="com.management.college.webapp.controller.PhoneFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="successView" value="redirect:phones.html"/>
        <property name="phoneManager" ref="phoneManager"/>
    </bean>
    <!--Phone-END-->

    <!--PersonName-START-->
    <bean id="personNameController" class="com.management.college.webapp.controller.PersonNameController">
        <property name="personNameManager" ref="personNameManager"/>
    </bean>

    <bean id="personNameFormController" class="com.management.college.webapp.controller.PersonNameFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="successView" value="redirect:personNames.html"/>
        <property name="personNameManager" ref="personNameManager"/>
    </bean>
    <!--PersonName-END-->

    <!--Billing-START-->
    <bean id="billingController" class="com.management.college.webapp.controller.BillingController">
        <property name="billingManager" ref="billingManager"/>
    </bean>

    <bean id="billingFormController" class="com.management.college.webapp.controller.BillingFormController">
        <property name="validator" ref="beanValidator"/>
        <property name="successView" value="redirect:billings.html"/>
        <property name="billingManager" ref="billingManager"/>
    </bean>
    <!--Billing-END-->

    <!-- Add additional controller beans here -->

    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="2097152"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="ApplicationResources"/>
        <property name="useCodeAsDefaultMessage" value="true"/>
    </bean>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /admin/activeUsers.html=filenameController
                /admin/flushCache.html=filenameController
                /admin/reload.html=reloadController
                /admin/users.html=userController
                /mainMenu.html=filenameController
                /passwordHint.html=passwordHintController
                /decodeGroups.html=decodeGroupController
                /decodeGroupform.html=decodeGroupFormController
            </value>
        </property>
        <property name="order" value="0"/>
    </bean>

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping">
        <property name="order" value="1"/>
    </bean>

    <!-- View Resolver for JSPs -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="requestContextAttribute" value="rc"/>
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/pages/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>
